<section id="services" class="py-24 px-4 bg-coffee-50">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <p class="text-coffee-500 text-sm uppercase tracking-widest mb-4 font-semibold">{{ site.sectionTitles.servicesSubtitle }}</p>
      <h2 class="text-4xl md:text-5xl font-display font-bold text-coffee-800">{{ site.sectionTitles.services }}</h2>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {% for service in site.services %}
      <div class="group bg-white p-8 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 border border-coffee-100 hover:border-coffee-200">
        <div class="w-14 h-14 bg-gradient-to-br from-coffee-100 to-coffee-200 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
          <span class="text-2xl">{{ service.icon if service.icon else "âœ¦" }}</span>
        </div>
        <h3 class="text-xl font-display font-bold text-coffee-800 mb-3">{{ service.name }}</h3>
        <p class="text-gray-600 leading-relaxed">{{ service.description }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
