<section id="contact" class="py-24 px-4 bg-coffee-50">
  <div class="max-w-6xl mx-auto">
    <div class="bg-white rounded-3xl shadow-xl overflow-hidden">
      <div class="grid lg:grid-cols-2">
        <!-- Left side: Info -->
        <div class="p-12 lg:p-16">
          <p class="text-coffee-500 text-sm uppercase tracking-widest mb-4 font-semibold">{{ site.sectionTitles.contactSubtitle }}</p>
          <h2 class="text-4xl md:text-5xl font-display font-bold text-coffee-800 mb-6">{{ site.sectionTitles.contact }}</h2>
          <p class="text-gray-600 text-lg mb-10">{{ site.contact.tagline }}</p>
          
          <div class="space-y-6">
            <a href="tel:{{ site.contact.phone | replace('(', '') | replace(')', '') | replace(' ', '') | replace('-', '') }}" class="flex items-center gap-4 group">
              <div class="w-14 h-14 bg-coffee-100 rounded-xl flex items-center justify-center group-hover:bg-coffee-600 transition-colors">
                <svg class="w-6 h-6 text-coffee-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
              </div>
              <div>
                <p class="text-sm text-gray-500">Phone</p>
                <p class="text-lg font-semibold text-coffee-800 group-hover:text-coffee-600 transition-colors">{{ site.contact.phone }}</p>
              </div>
            </a>
            
            <a href="mailto:{{ site.contact.email }}" class="flex items-center gap-4 group">
              <div class="w-14 h-14 bg-coffee-100 rounded-xl flex items-center justify-center group-hover:bg-coffee-600 transition-colors">
                <svg class="w-6 h-6 text-coffee-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
              </div>
              <div>
                <p class="text-sm text-gray-500">Email</p>
                <p class="text-lg font-semibold text-coffee-800 group-hover:text-coffee-600 transition-colors">{{ site.contact.email }}</p>
              </div>
            </a>
          </div>
        </div>
        
        <!-- Right side: Visual -->
        <div class="bg-gradient-to-br from-coffee-600 to-coffee-800 p-12 lg:p-16 flex items-center justify-center">
          <div class="text-center text-white">
            <span class="text-8xl mb-6 block">{{ site.services[0].icon if site.services[0].icon else "â˜•" }}</span>
            <p class="text-2xl font-display font-bold mb-2">We're here for you</p>
            <p class="text-coffee-200">{{ site.contact.availability }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
