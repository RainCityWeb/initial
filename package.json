{
    "name": "sunrise-coffee-site",
    "version": "1.0.0",
    "description": "Simple small business website built with 11ty, Tailwind CSS, and Decap CMS",
    "scripts": {
        "dev": "concurrently \"npm run css:watch\" \"npx @11ty/eleventy --serve\"",
        "dev:cms": "concurrently \"npm run css:watch\" \"npx @11ty/eleventy --serve\" \"npx decap-server\"",
        "build": "npm run css:build && npx @11ty/eleventy",
        "css:build": "npx @tailwindcss/cli -i ./src/css/style.css -o ./_site/css/style.css --minify",
        "css:watch": "npx @tailwindcss/cli -i ./src/css/style.css -o ./_site/css/style.css --watch"
    },
    "devDependencies": {
        "@11ty/eleventy": "^2.0.1",
        "@tailwindcss/cli": "^4.0.0",
        "concurrently": "^9.2.1",
        "decap-server": "^3.4.0",
        "tailwindcss": "^4.0.0"
    },
    "engines": {
        "node": ">=20"
    }
}
