<section id="location" class="py-24 px-4 bg-white">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <p class="text-coffee-500 text-sm uppercase tracking-widest mb-4 font-semibold">{{ site.sectionTitles.locationSubtitle }}</p>
      <h2 class="text-4xl md:text-5xl font-display font-bold text-coffee-800">{{ site.sectionTitles.location }}</h2>
    </div>
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div>
        <div class="bg-coffee-50 rounded-2xl p-8 mb-8">
          <div class="flex items-start gap-4 mb-6">
            <div class="w-12 h-12 bg-coffee-600 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
            </div>
            <div>
              <h3 class="font-display font-bold text-coffee-800 text-lg mb-1">Address</h3>
              <p class="text-gray-600">{{ site.location.address }}<br>{{ site.location.city }}, {{ site.location.state }} {{ site.location.zip }}</p>
            </div>
          </div>
          <a href="https://maps.google.com/?q={{ site.location.address | urlencode }}+{{ site.location.city | urlencode }}+{{ site.location.state }}" target="_blank" class="inline-flex items-center gap-2 text-coffee-600 font-semibold hover:text-coffee-800 transition-colors">
            Get Directions
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
          </a>
        </div>
      </div>
      <div class="rounded-2xl overflow-hidden shadow-2xl ring-1 ring-coffee-100">
        <iframe 
          src="{{ site.location.mapEmbedUrl }}" 
          width="100%" 
          height="400" 
          style="border:0;" 
          allowfullscreen="" 
          loading="lazy" 
          referrerpolicy="no-referrer-when-downgrade"
          title="Map showing location of {{ site.businessName }}"
          class="block">
        </iframe>
      </div>
    </div>
  </div>
</section>
